{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Unity: Run Tests",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "New-Item -ItemType Directory -Force -Path (Join-Path '${workspaceFolder}' 'Logs') | Out-Null; & 'C:\\Program Files\\Unity\\Hub\\Editor\\6000.2.15f1\\Editor\\Unity.exe' -runTests -batchmode -projectPath '${workspaceFolder}' -testResults (Join-Path '${workspaceFolder}' 'Logs/results.xml') -logFile (Join-Path '${workspaceFolder}' 'Logs/Editor.log') -testPlatform EditMode -debugCodeOptimization"
            ],
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "npm: verify",
            "type": "npm",
            "script": "verify",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}